{% extends "Default/index.html.twig" %}

{% block content %}
    <div class="header -ml-5 -mr-5 -mt-5 p-5 bg-orange-300 mb-5">
        <h1 class="text-3xl font-bold mb-5">JSON TO CLASS</h1>    
        <h2 class="text-1xl">Convert JSON to another entity (class, interface, etc.)</h2>
    </div>

    <div class="form">
        <form class="mt-5">
            <textarea rows="10" class="w-full p-2 border border-gray-300 rounded-md" placeholder="Enter JSON here"></textarea>
            <button type="submit" class="mt-3 px-4 py-2 bg-blue-500 text-white rounded-md">Convert</button>
        </form>
    </div>
    
    
{% endblock %}
